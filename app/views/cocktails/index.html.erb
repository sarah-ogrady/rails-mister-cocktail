<div class="cocktail-banner">
  <div class="title">
    <h2 class="title-text">Cocktail Ninjas</h2>
    <%= link_to 'Add new cocktail', new_cocktail_path, class: 'add btn' %>
  </div>
</div>
<div class="cocktail-grid">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.present? %>
      <div class="d-flex align-items-center justify-content-center">
        <div class="cocktail-card d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category" >
            <li><%= link_to cocktail.name, cocktail_path(cocktail.id), class: 'cocktail-link' %></li>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
